<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
     <t t-name="tetras_school_management.TeacherFormScreen">
         <div class="teacher-form">
             <div t-on-click="() => this.tetras.showScreen('TeacherListScreen')">Back</div>
             <span>Name: <t t-esc="props.teacher.name"/></span><br/>
             <span>Phone: <t t-esc="props.teacher.phone"/></span><br/>
             <span>Email: <t t-esc="props.teacher.email"/></span><br/>
             <span>Diploma: <t t-esc="props.teacher.diploma"/></span>
         </div>
    </t>
</templates>
