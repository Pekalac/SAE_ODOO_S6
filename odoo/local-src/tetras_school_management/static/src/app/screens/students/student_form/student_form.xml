<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
     <t t-name="tetras_school_management.StudentFormScreen">
         <h2>
             <a class="ariane" t-on-click="() => this.tetras.showScreen('MainScreen')">
                 Tetras
             </a>
             >
             <a class="ariane" t-on-click="() => this.tetras.showScreen('StudentListScreen')">
                 Students List
             </a>
             >
             <t t-esc="props.student.name"/>
         </h2>
         <div class="student-form">
             <table class="table-form">
                 <tr class="lign-form">
                     <th class="attribute">Name</th>
                     <td>
                         <t t-if="props.student.name == ''">
                             Non communiqué
                         </t>
                         <t t-else="">
                            <t t-esc="props.student.name" />
                         </t>
                     </td>
                 </tr>
                 <tr class="lign-form">
                     <th class="attribute">Phone</th>
                     <td>
                         <t t-if="props.student.phone == ''">
                             Non communiqué
                         </t>
                         <t t-else="">
                            <t t-esc="props.student.phone" />
                         </t>
                     </td>
                 </tr>
                 <tr class="lign-form">
                     <th class="attribute">Email</th>
                     <td>
                         <t t-if="props.student.email == ''">
                             Non communiqué
                         </t>
                         <t t-else="">
                            <t t-esc="props.student.email" />
                         </t>
                     </td>
                 </tr>
                 <t t-if="props.student.grades == ''">
                     <tr class="lign-form">
                             <th class="attribute">Grades</th>
                         <td>
                             Pas de notes disponibles
                         </td>
                     </tr>
                 </t>
                 <t t-else="">
                     <tr class="lign-form">
                         <th class="attribute">Grades</th>
                     </tr>
                     <tr>
                         <th class="attribute sub-attribute">Name</th>
                         <th>Grade</th>
                     </tr>
                     <t t-foreach="props.student.grades" t-as="grade" t-key="grade_id">
                         <tr class="tr-values array-attribute">
                             <th class="list-name">
                                 <t t-if="grade.name == ''">
                                     Non renseigné
                                 </t>
                                 <t t-else="">
                                    <t t-esc="grade.name" />
                                 </t>
                             </th>
                             <td>
                                 <t t-if="grade.grade == ''">
                                     Non renseigné
                                 </t>
                                 <t t-else="">
                                    <t t-esc="grade.grade" />
                                 </t>
                             </td>
                         </tr>
                     </t>
                 </t>
                 <!--<t t-else="props.student.grades == null">
                     <tr class="tr-values array-attribute">
                         <th class="list-name">Pas de notes disponibles</th>
                     </tr>
                 </t>-->
             </table>
         </div>
         <div class="style-button back-button" t-on-click="() => this.tetras.showScreen('StudentListScreen')">Back</div>
    </t>
</templates>
