<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
     <t t-name="app_refuge_aventuriers.PersonListScreen">
         <div class="list">
             <h2><a class="ariane" t-on-click="() => this.refuge.showScreen('MainScreen')">Tetras</a> > Teachers List</h2>
             <div>
                 <table class="table-list">
                     <thead>
                         <tr class="tr-champs">
                             <td class="td-champs">Name</td>
                         </tr>
                     </thead>
                     <tbody>
                         <t t-foreach="refuge.teachers" t-as="teacher" t-key="teacher.id">
                             <TeacherLine name="teacher.name"
                                          teacherId="teacher.id"
                                          onClick="() => this.onTeacherClick(teacher)" />
                         </t>
                     </tbody>
                 </table>
             </div>
             <div class="style-button back-button" t-on-click="() => this.refuge.showScreen('MainScreen')">Back</div>
         </div>

    </t>
</templates>
