<odoo>
    <record id="view_refuge_grade_form" model="ir.ui.view">
        <field name="name">refuge.grade.form</field>
        <field name="model">refuge.grade</field>
        <field name="arch" type="xml">
            <form string="Grade">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="grade"/>
                        <field name="student_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="refuge_grade_action" model="ir.actions.act_window">
        <field name="name">Grades</field>
        <field name="res_model">refuge.grade</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
