<odoo>
    <record id="view_refuge_classe_form" model="ir.ui.view">
        <field name="name">refuge.classe.form</field>
        <field name="model">refuge.classe</field>
        <field name="arch" type="xml">
            <form string="Classe">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="classe"/>
                    </group>
                    <group>
                        <field name="student_ids">
                            <tree>
                                <field name="name"/>
                                <field name="email"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="refuge_classe_action" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">refuge.classe</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
